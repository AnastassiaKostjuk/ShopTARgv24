@model ShopTARgv24.Models.Kindergarten.KindergartenDetailsViewModel


<h1>Details</h1>

<div class="card-body p-4">
    <h4>Kindergarten</h4>
     <hr />
     <dl class="row">
         <div class="form-group row">
            <label asp-for="Id" class="col-sm-3 col-form-label fw-bold"></label>
            @Html.DisplayFor(Model => Model.Id)
          </div>
     </dl>

     <dl class="row">
         <div class="form-group row">
            <label asp-for="Group" class="col-sm-3 col-form-label fw-bold"></label>
             @Html.DisplayFor(Model => Model.Group)
         </div>
     </dl>

     <dl class="row">
         <div class="form-group row">
             <label asp-for="ChildrenTotal" class="col-sm-3 col-form-label fw-bold"></label>
             @Html.DisplayFor(Model => Model.ChildrenTotal)
